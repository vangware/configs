	},
	"bugs": "https://github.com/vangware/configs/issues",
	"dependencies": {
		"@eslint/js": "^8.36.0",
		"@types/eslint": "^8.21.3",
		"@types/node": "^18.15.5",
		"@types/prettier": "^2.7.2",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@typescript-eslint/type-utils": "^5.56.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-node": "^0.3.7",
		"eslint-plugin-functional": "5.0.7",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-no-null": "^1.0.2",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"stylelint-order": "^6.0.3",
		"stylelint-prettier": "^3.0.0"
	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.3.7",
		"eslint": "^8.36.0",
		"markdown-to-html-cli": "^3.5.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.6",
		"rimraf": "^4.4.1",
		"stylelint": "^15.3.0",
		"typescript": "~5.0.2"
	},
	"exports": {
		".": {
			"import": "./index.js"
		},
		"./*.cjs": "./*.cjs",
		"./*.d.cts": "./*.d.cts",
		"./*.js": "./*.js",
		"./*.d.ts": "./*.d.ts",
		"./*.css": "./*.css",
		"./*.json": "./*.json"
	},
	"files": [
		"*.cjs",
		"*.d.cts",
		"*.json",
		"*.cjs",
		"*.css",
		"*.d.cts",
		"*.d.ts",
		"*.js",
		"*.json",
		"rules"
	],
	"homepage": "https://configs.vangware.com",
	"keywords": [
		"config",
		"configs",
		"configuration",
		"configurations",
		"eslint",
		"eslintconfig",
		"format",
		"git",
		"linting",
		"prettier",
		"scaffold",
		"settings",
		"style",
		"stylelint",
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"main": "./index.cjs",
	"peerDependencies": {
		"eslint": "^8.36.0",
		"prettier": "^2.8.0",
		"stylelint": "^15.3.0",
		"typescript": "~5.0.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/configs.git"
	},
	"scripts": {
		"clean": "rimraf {index,rules/*,*.config}.d.{ts,cts}",
		"compile": "tsc",
		"document": "markdown-to-html --description='⚙️ Project configurations' --output=docs/index.html --style='a { color: #0a8 !important; }'",
		"git:pre-push": "run-s clean lint document",
		"lint": "eslint .",
		"prepare": "lefthook install",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --write --loglevel warn './**/*.d.{ts,cts}'"
	},
	"sideEffects": false,
	"type": "module",
	"types": "./index.d.cts"
}
