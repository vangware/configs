	"markdown-to-html": {
		"document": {
			"title": "Configs by Vangware",
			"description": "Project configurations for Vangware projects",
			"style": "@import url(https://rsms.me/inter/inter.css); @import url(https://fonts.bunny.net/css?family=fira-code:400,700&display=swap); dark-mode, markdown-style { font-family: 'Inter var', sans-serif; font-feature-settings: 'cv11', 'ss01'; font-variation-settings: 'opsz' 32; } markdown-style tt, markdown-style code { font-family: 'Fira Code', monospace; font-variant-ligatures: common-ligatures; } a { color: #0a8 !important; } #logo { margin: 1rem auto !important; }",
			"meta": [
				{
					"description": "Project configurations for Vangware projects"
				},
				{
					"keywords": "config,configs,configuration,configurations,eslint,eslintconfig,format,git,linting,prettier,scaffold,settings,style,stylelint,typescript,vangware"
				}
			]
		},
		"favicon": "/favicon.ico"
	},
	"peerDependencies": {
		"eslint": "^8.0.0",
		"prettier": "^3.0.0",
		"stylelint": "^15.0.0",
		"typescript": "~5.2.0"
	},
	"peerDependenciesMeta": {
		"stylelint": {
			"optional": true
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/configs.git"
	},
	"scripts": {
		"clean": "rimraf {index,rules/*,*.config,update-peers}.d.{ts,cts}",
		"compile": "tsc",
		"dependencies": "node ./update-peers.js",
		"git:pre-push": "run-s --print-label clean lint",
		"lint": "eslint .",
		"postpublish": "run-s clean",
		"prepare": "lefthook install",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --ignore-path=.prettierignore --log-level=warn --write '**/*.d.{ts,cts}'"
	},
	"sideEffects": false,
	"type": "module",
	"types": "./index.d.cts"
}
