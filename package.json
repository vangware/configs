{
	"name": "@vangware/configs",
	"description": "⚙️ Project configurations",
	"version": "6.0.0",
	"author": {
		"email": "hello@vangware.com",
		"name": "Vangware",
		"url": "https://vangware.com"
	},
	"bin": {
		"update-peers": "./update-peers.js"
	},
	"bugs": {
		"email": "issues@vangware.com",
		"url": "https://github.com/vangware/configs/issues"
	},
	"dependencies": {
		"@eslint/js": "^8.49.0",
		"@types/eslint": "^8.44.2",
		"@types/node": "^20.6.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@typescript-eslint/type-utils": "^6.7.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-node": "^0.3.9",
		"eslint-plugin-functional": "6.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-no-null": "^1.0.2",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"stylelint-order": "^6.0.3",
		"stylelint-prettier": "^4.0.2"
	},
	"devDependencies": {
		"@changesets/types": "^5.2.1",
		"eslint": "^8.49.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"rimraf": "^5.0.1",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.10.3",
		"typescript": "~5.2.2"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"exports": {
		".": "./index.js",
		"./*.cjs": "./*.cjs",
		"./*.d.cts": "./*.d.cts",
		"./*.js": "./*.js",
		"./*.d.ts": "./*.d.ts",
		"./*.css": "./*.css",
		"./*.json": "./*.json"
	},
	"files": [
		"*.cjs",
		"*.d.cts",
		"*.json",
		"*.cjs",
		"*.css",
		"*.d.cts",
		"*.d.ts",
		"*.js",
		"*.json",
		"rules"
	],
	"homepage": "https://configs.vangware.com",
	"keywords": [
		"config",
		"configs",
		"configuration",
		"configurations",
		"eslint",
		"eslintconfig",
		"format",
		"git",
		"linting",
		"prettier",
		"scaffold",
		"settings",
		"style",
		"stylelint",
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"peerDependencies": {
		"eslint": "^8.0.0",
		"prettier": "^3.0.0",
		"stylelint": "^15.0.0",
		"typescript": "~5.2.0"
	},
	"peerDependenciesMeta": {
		"stylelint": {
			"optional": true
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/configs.git"
	},
	"scripts": {
		"clean": "rimraf {index,rules/*,*.config,update-peers}.d.{ts,cts}",
		"compile": "tsc",
		"dependencies": "node ./update-peers.js",
		"lint": "eslint .",
		"postpublish": "run-s clean",
		"prepare": "simple-git-hooks",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --ignore-path=.prettierignore --log-level=warn --write '**/*.d.{ts,cts}'"
	},
	"sideEffects": false,
	"simple-git-hooks": {
		"pre-push": "$(pwd)/node_modules/.bin/run-s --print-label clean lint"
	},
	"type": "module",
	"types": "./index.d.cts"
}
