{
	"name": "@vangware/configs",
	"description": "⚙️ Project configurations",
	"version": "3.3.0",
	"author": {
		"email": "hello@vangware.com",
		"name": "Vangware",
		"url": "https://vangware.com"
	},
	"bugs": "https://github.com/vangware/configs/issues",
	"dependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@types/eslint": "^8.4.6",
		"@types/node": "^18.7.23",
		"@types/prettier": "^2.7.1",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-node": "^0.3.6",
		"eslint-plugin-functional": "^4.4.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsdoc": "^39.3.6",
		"eslint-plugin-no-null": "^1.0.2",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.8",
		"eslint-plugin-react-hooks": "^4.6.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-order": "^5.0.0",
		"stylelint-prettier": "^2.0.0"
	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.1.1",
		"eslint": "^8.24.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"stylelint": "^14.12.1",
		"typescript": "~4.8.4"
	},
	"exports": {
		".": {
			"import": "./index.js",
			"require": "./index.cjs"
		},
		"./.*.cjs": "./.*.cjs",
		"./.*.d.cts": "./.*.d.cts",
		"./.*.json": "./.*.json",
		"./*.css": "./*.css",
		"./*.json": "./*.json"
	},
	"files": [
		".*.cjs",
		".*.d.cts",
		".*.json",
		"*.cjs",
		"*.css",
		"*.d.cts",
		"*.d.ts",
		"*.js",
		"*.json",
		"rules"
	],
	"homepage": "https://github.com/vangware/configs#readme",
	"keywords": [
		"config",
		"configs",
		"configuration",
		"configurations",
		"eslint",
		"eslintconfig",
		"format",
		"git",
		"linting",
		"prettier",
		"scaffold",
		"settings",
		"style",
		"stylelint",
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"main": "./index.cjs",
	"peerDependencies": {
		"eslint": "^8.24.0",
		"prettier": "^2.7.0",
		"stylelint": "^14.11.0",
		"typescript": "~4.8.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/configs.git"
	},
	"scripts": {
		"clean": "rimraf {.*,index,rules/*}.d.{ts,cts}",
		"compile": "tsc",
		"git:pre-push": "run-s lint",
		"lint": "eslint . --ext .cjs",
		"prepare": "lefthook install",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --write --loglevel warn './**/*.d.{ts,cts}'"
	},
	"sideEffects": false,
	"type": "module",
	"types": "./index.d.cts"
}
